{
  "name": "app",
  "private": "true",
  "dependencies": {
    "@sentry/react": "^6.18.1",
    "@sentry/tracing": "^6.18.1",
    "classnames": "^2.3.1",
    "farce": "^0.4.5",
    "found": "^1.1.1",
    "found-relay": "^0.9.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-relay": "^13.1.1",
    "relay-runtime": "^13.1.1"
  },
  "scripts": {
    "build": "node esbuild.config.js",
    "build:css": "sass ./app/assets/stylesheets/application.sass.scss ./app/assets/builds/application.css --no-source-map --load-path=node_modules",
    "check-types": "tsc --project tsconfig.json --noEmit --preserveWatchOutput",
    "relay": "relay-compiler",
    "lint": "prettier 'app/javascript/**/*.*' 'app/assets/stylesheets/**/*.scss'",
    "lint:fix": "prettier --write 'app/javascript/**/*.*' 'app/assets/stylesheets/**/*.scss'"
  },
  "devDependencies": {
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@types/react-relay": "^13.0.1",
    "@types/relay-runtime": "^13.0.2",
    "esbuild": "^0.14.23",
    "graphql": "^16.3.0",
    "prettier": "^2.5.1",
    "relay-compiler": "^13.1.1",
    "sass": "^1.49.9",
    "typescript": "^4.6.2"
  },
  "relay": {
    "src": "./app/javascript",
    "artifactDirectory": "./app/javascript/RelayArtifacts",
    "schema": "./schema.graphql",
    "language": "typescript",
    "customScalars": {
      "BigInt": "string"
    }
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true,
    "printWidth": 100
  }
}
