<p style="color: green"><%= notice %></p>

<div class="heading">
  <h1>Users</h1>
  <div class="actions">
  <% if policy(@users).new? %>
    <%= link_to "New user", new_user_path, class: "button" %>
  <% end %>
  </div>
</div>

<ul class="user-list">
  <% @users.each do |user| %>
    <li>
      <%= link_to_if(policy(user).show?, user.name, user) %>
    </li>
  <% end %>
</ul>


